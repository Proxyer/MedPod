<?xml version="1.0" encoding="utf-8"?>

<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[DN] Bundle Of Traits</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- Prevent MedPods from treating Can't Feel Pain hediff from Congenital Analgesia trait -->

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="MedPodBedBase"]/comps/li[@Class="MedPod.CompProperties_TreatmentRestrictions"]/neverTreatableHediffs</xpath>
					<value>
						<li>BOT_CongenitalAnalgesiaPainReducer</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>