<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>GiTS Cyberbrains</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<!-- Allow MedPods to always treat Closed Shell Syndrome, as the hediff's isBad=false causes pawns to get stuck in MedPods -->
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="MedPodBedBase"]/comps/li[@Class="MedPod.CompProperties_TreatmentRestrictions"]/alwaysTreatableHediffs</xpath>
					<value>
						<li>gitsClosedShellSyndrome</li>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
</Patch>