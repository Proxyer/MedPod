<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>More Persona Traits</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<!-- Prevent MedPods from treating psychic drug needs / addictions from persona bonded weapons -->
			
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="MedPodBedBase"]/comps/li[@Class="MedPod.CompProperties_TreatmentRestrictions"]/neverTreatableHediffs</xpath>
					<value>
						<li>MPT_Hediff_BondedNeedChemicalWakeUp</li>
						<li>MPT_Hediff_BondedNeedChemicalSmokeleaf</li>
						<li>MPT_Hediff_BondedNeedChemicalPsychite</li>
						<li>MPT_Hediff_BondedNeedChemicalGoJuice</li>
						<li>MPT_Hediff_BondedNeedChemicalAmbrosia</li>
						<li>MPT_Hediff_BondedNeedChemicalAlcohol</li>
					</value>
				</li>
			
			</operations>
		</match>
	</Operation>
</Patch>